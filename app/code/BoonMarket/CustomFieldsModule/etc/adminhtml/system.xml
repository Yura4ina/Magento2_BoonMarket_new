<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="boonmarket" translate="label" sortOrder="10">
            <label>BoonMarket</label>
        </tab>
        <section id="customfieldsmodule" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Custome fields</label>
            <tab>boonmarket</tab>
            <resource>BoonMarket_CustomFieldsModule::customfieldsmodule_config</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <field id="shop_link_title" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Shop link title</label>
                    <comment>This text will display on the header left nav.</comment>
                </field>
                <field id="shop_link_url" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Shop link url</label>
                    <comment>This text will display on the header left nav.</comment>
                </field>
                <field id="boon_life_link_title" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Boon Life link title</label>
                    <comment>This text will display on the header left nav.</comment>
                </field>
                <field id="boon_life_link_url" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Boon Life link url</label>
                    <comment>This text will display on the header left nav.</comment>
                </field>
            </group>
        </section>
    </system>
</config>
